<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login_Signup</title>
    <link rel="stylesheet" href="/style.css"/>
    <script src="https://kit.fontawesome.com/0124d97d64.js" crossorigin="anonymous"></script>
</head>
<body>
    <body>
        <div class="container">
            <div class="forms-container">
                <div class="signin-signup">
                    <form action="/login" method="POST" class="sign-in-form" id="sign-in-form">
                        <h2 class="title">Log In</h2>
                        <div class="input-field">
                            <i class="fas fa-user"></i>
                            <input type="text" name="email" placeholder="Email" />
                        </div>
                        <div class="input-field pass">
                            <i class="fas fa-lock"></i>
                            <input type="password" name="password" placeholder="Password" id="userPass" />
                            <i class="fa-solid fa-eye" id="showPass" style="cursor:pointer;"></i>
                            <i class="fa-solid fa-eye-slash" id="hidePass" style="display:none; cursor:pointer;"></i>
                        </div>
                        <button type="submit" value="Login" class="btn solid">
                            Login
                        </button>
                    </form>
                    <form action="/signup" method="POST" class="sign-up-form" id="sign-up-form">
                        <h2 class="title">Sign Up</h2>
                        <div class="input-field">
                            <i class="fas fa-user"></i>
                            <input type="text" placeholder="Username" name="username" />
                        </div>
                        <div class="input-field">
                            <i class="fas fa-envelope"></i>
                            <input type="email" placeholder="Email" name="email" />
                        </div>
                        <div class="input-field pass">
                            <i class="fas fa-lock"></i>
                            <input type="password" placeholder="Password" name="password" id="userPass2" />
                            <i class="fa-solid fa-eye" id="showPass2" style="cursor:pointer;"></i>
                            <i class="fa-solid fa-eye-slash" id="hidePass2" style="display:none; cursor:pointer;"></i>
                        </div>
                        <div class="input-field">
                            <i class="fa-solid fa-calendar-days"></i>
                            <input type="date" name="dob" />
                        </div>
                        <div class="input-field">
                            <i class="fa-solid fa-mobile-screen-button"></i>
                            <input type="text" placeholder="Mobile number" name="mobilenumber" />
                        </div>
                        <button type="submit" class="btn" value="Sign up">
                            Sign up
                        </button>
                        
                    </form>
                </div>
            </div>
    
            <div class="panels-container">
                <div class="panel left-panel">
                    <div class="content">
                        <h3>Welcome Back!</h3>
                        <p>
                            To keep connected with us please login with your personal info
                        </p>
                        <button class="btn transparent" id="sign-up-btn">
                            Sign up
                        </button>
                    </div>
                    <img src="/login.png" class="image" alt="" />
                </div>
                <div class="panel right-panel">
                    <div class="content">
                        <h3>Hello, Friend!</h3>
                        <p>
                            Enter your personal details and start journey with us
                        </p>
                        <button class="btn transparent" id="sign-in-btn">
                            Log in
                        </button>
                    </div>
                    <img src="/signup.png" class="image" alt="" />
                </div>
            </div>
        </div>
    
        <script>
            const sign_in_btn = document.querySelector("#sign-in-btn");
            const sign_up_btn = document.querySelector("#sign-up-btn");
            const container = document.querySelector(".container");
            const showPass = document.querySelector("#showPass");
            const hidePass = document.querySelector("#hidePass");
            const showPass2 = document.querySelector("#showPass2");
            const hidePass2 = document.querySelector("#hidePass2");
    
            sign_up_btn.addEventListener("click", () => {
                container.classList.add("sign-up-mode");
            });
    
            sign_in_btn.addEventListener("click", () => {
                container.classList.remove("sign-up-mode");
            });
    
            showPass.addEventListener("click", () => {
                hidePass.style.display = "block";
                showPass.style.display = "none";
                document.getElementById("userPass").type = "text";
            });
    
            hidePass.addEventListener("click", () => {
                showPass.style.display = "block";
                hidePass.style.display = "none";
                document.getElementById("userPass").type = "password";
            });
    
            showPass2.addEventListener("click", () => {
                hidePass2.style.display = "block";
                showPass2.style.display = "none";
                document.getElementById("userPass2").type = "text";
            });
    
            hidePass2.addEventListener("click", () => {
                showPass2.style.display = "block";
                hidePass2.style.display = "none";
                document.getElementById("userPass2").type = "password";
            });
        </script>
    </body>
</body>
</html>